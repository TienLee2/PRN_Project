@model PRN_Project.Models.Account
@{
    ViewData["Title"] = "SignUp";
    Layout = null;
}

<!DOCTYPE html>
<!-- === Coding by CodingLab | www.codinglabweb.com === -->
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- ===== Iconscout CSS ===== -->
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">

    <!-- ===== CSS ===== -->
    <link rel="stylesheet" href="/css/SignUp.css">


    <!--<title>Login & Registration Form</title>-->
</head>
<body>
    <div class="container">
        <div class="forms">
            <div class="form signup">
                <span class="title">Registration</span>

                <form asp-action="Create" method="post">
                    <div class="input-field">
                        <input asp-for="Username" placeholder="Enter your name" required />
                        <i class="uil uil-user"></i>
                        <span asp-validation-for="Username" class="text-danger"></span>
                        
                    </div>
                    
                        <span style="color: red">@ViewBag.Message1</span>
                    
                    <div class="input-field">
                        <input asp-for="Email" placeholder="Enter your email" required />
                        <i class="uil uil-envelope icon"></i>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <input asp-for="IsCus" class="form-control" value="True" type="hidden" />
                    <input asp-for="CustomerType" class="form-control" value="Vip0" type="hidden" />
                    <div class="input-field">
                        <input asp-for="Password" type="password" class="password" placeholder="Enter a password" required />
                        <i class="uil uil-lock icon"></i>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="input-field">
                        <input type="password" class="password" placeholder="Confirm a password" required>
                        <i class="uil uil-lock icon"></i>
                        <i class="uil uil-eye-slash showHidePw"></i>
                    </div>

                    <div class="input-field">
                        <input asp-for="Address" placeholder="Enter your address" required />
                        <i class="uil uil-envelope icon"></i>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="input-field">
                        <input asp-for="Phone" placeholder="Enter your phone" required />
                        <i class="uil uil-envelope icon"></i>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="checkbox-text">
                        <div class="checkbox-content">
                            <input type="checkbox" id="termCon">
                            <label for="termCon" class="text">I accepted all terms and conditions</label>
                        </div>
                    </div>

                    <div class="input-field button">
                        <input type="submit" value="Signup">
                    </div>
                </form>

                <div class="login-signup">
                    <span class="text">
                        Already a member?
                        <a asp-controller="Accounts" asp-action="Index" class="text login-link">Login Now</a>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/Login.js"></script>
</body>
</html>


